# /bin/bash

# Make sure we're in workdir
cd $(dirname "$BASH_SOURCE")

# This will ensure if any of sub-shells fail,
# this shell will fail too (thus not continue).
set -e

# Parse input args/flags
CLEAN="clean"
if [[ $# -gt 0 ]]; then
    for ARG in "$@"; do
        if [ $ARG == "--skip-clean" ]; then
            CLEAN=""
        fi
    done
fi

# Test
echo "Testing..."
mvn $CLEAN test
